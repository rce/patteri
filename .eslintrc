{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "globals": {
    "window": true,
    "global": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false
      }
    ],
    "no-console": "error",
    "no-extra-semi": "off"
  }
}
